<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/bg"
        android:layout_width="432dp"
        android:layout_height="760dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="85dp"
        android:id="@+id/place1"
        />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="475dp"
        android:layout_marginLeft="130dp"
        android:id="@+id/animal1"
        />

    <Button
        android:id="@+id/button_place1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="475dp"
        android:layout_marginLeft="85dp"
        android:background="@android:color/transparent"/>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="85dp"
        android:id="@+id/place2" />

    <ImageView
        android:layout_width="135dp"
        android:layout_height="100dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="55dp"
        android:id="@+id/animal2"/>


    <Button
        android:id="@+id/button_place2"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="85dp"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/place3"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="200dp" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="160dp"
        android:id="@+id/animal3"/>

    <Button
        android:id="@+id/button_place3"
        android:layout_width="140dp"
        android:layout_height="200dp"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="200dp"
        android:background="@android:color/transparent" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="250dp"
        android:id="@+id/place4"/>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="220dp"
        android:id="@+id/animal4"/>

    <Button
        android:id="@+id/button_place4"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="250dp"
        android:background="@android:color/transparent"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/button_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="#E1BEE7"
            android:text="SHOP"
            android:visibility="gone"/>

        <Button
            android:id="@+id/button_gift_collections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="#CE93D8"
            android:text="@string/gift_collections"
            android:visibility="gone"/>

        <Button
            android:id="@+id/button_pet_collections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="#BA68C8"
            android:text="@string/pet_collection"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="" />

    <TextView
        android:id="@+id/item2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="" />

    <TextView
        android:id="@+id/item3_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="" />

    <TextView
        android:id="@+id/item4_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="" />
    <TextView
        android:id="@+id/animal1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="" />

    <TextView
        android:id="@+id/animal2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="" />

    <TextView
        android:id="@+id/animal3_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="" />

    <TextView
        android:id="@+id/animal4_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="" />
</RelativeLayout>

