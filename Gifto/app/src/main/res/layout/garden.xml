<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="80dp"
        android:id="@+id/place1" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="110dp"
        android:id="@+id/animal1" />

    <Button
        android:id="@+id/button_place1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="80dp"
        android:background="@android:color/transparent"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/place2" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="80dp"
        android:id="@+id/animal2" />


    <Button
        android:id="@+id/button_place2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="85dp"
        android:background="@android:color/transparent"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="300dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="260dp"
        android:id="@+id/place3" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="220dp"
        android:id="@+id/animal3" />

    <Button
        android:id="@+id/button_place3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="260dp"
        android:background="@android:color/transparent"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="230dp"
        android:id="@+id/place4" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="250dp"
        android:id="@+id/animal4" />

    <Button
        android:id="@+id/button_place4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="230dp"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/expand_left"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:text="@string/expand_left" />

    <Button
        android:id="@+id/expand_right"
        android:layout_width="55dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="145dp"
        android:layout_height="match_parent"
        android:text="@string/expand_right"
        android:background="@android:color/transparent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/button_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="#E1BEE7"
            android:text="SHOP" />

        <Button
            android:id="@+id/button_gift_collections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="#CE93D8"
            android:text="@string/gift_collections" />

        <Button
            android:id="@+id/button_pet_collections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="#BA68C8"
            android:text="@string/pet_collection" />
    </LinearLayout>

    <TextView
        android:id="@+id/item1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="" />

    <TextView
        android:id="@+id/item2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="" />

    <TextView
        android:id="@+id/item3_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="" />

    <TextView
        android:id="@+id/item4_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="" />
    <TextView
        android:id="@+id/animal1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="" />

    <TextView
        android:id="@+id/animal2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="" />

    <TextView
        android:id="@+id/animal3_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="" />

    <TextView
        android:id="@+id/animal4_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="" />
</RelativeLayout>

