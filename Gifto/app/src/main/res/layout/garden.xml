<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="60dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <Button
        android:id="@+id/button_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_gift_collections"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/pet_food" />

    <Button
        android:id="@+id/button_gift_collections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_pet_collections"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/gift_collections" />

    <Button
        android:id="@+id/button_pet_collections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/pet_collection" />
</RelativeLayout>

