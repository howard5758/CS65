<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:title="Account Preferences">

        <PreferenceScreen
            android:title="Name, Email, Class, etc"
            android:summary="User Profile">

            <intent android:action="oliver.edu.dartmouth.cs.myruns2.Settings"/>

        </PreferenceScreen>

        <CheckBoxPreference
            android:key="checkbox_preference"
            android:title="Privacy Settings"
            android:summary="Posting your records anonymously" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Additional Settings">

        <ListPreference
            android:key="list_preference"
            android:title="Unit Preferences"
            android:summary="Select the units"
            android:dialogTitle="Unit Preference"
            android:entries="@array/entries_list_preference"
            android:entryValues="@array/entryvalues_list_preference" />

        <EditTextPreference
            android:key="edittext_preference"
            android:title="Comments"
            android:summary="Please enter your concerns"
            android:dialogTitle="Comments" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Misc.">

        <PreferenceScreen
            android:title="Webpage"
            android:summary="Dartmouth CS Department">

            <intent android:action="android.intent.action.VIEW"
                android:data="http://web.cs.dartmouth.edu/" />

        </PreferenceScreen>
    </PreferenceCategory>

</PreferenceScreen>
